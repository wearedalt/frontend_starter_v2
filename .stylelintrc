{
    "extends": "stylelint-config-recommended-scss",
    "rules":
    {
        "block-no-empty": null,
        "font-family-no-missing-generic-family-keyword": null,
        "scss/at-rule-no-unknown": null,
        "no-descending-specificity": null,
        "scss/at-import-no-partial-leading-underscore": null,
        "at-rule-no-unknown":
        [
            null,
            {
                "ignoreAtRules":
                [
                    "viewport",
                    "apply",
                    "screen",
                    "extends",
                    "tailwind",
                    "function",
                    "if",
                    "else",
                    "return",
                    "each",
                    "include",
                    "mixin",
                    "import"
                ]
            }
        ]
    }
}